<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.android.justjava.MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/logButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startConnection"
                android:text="Start connection" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="stopConnection"
                android:text="Stop connection" />

            <Button
                android:id="@+id/normalKeyboardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toNormalKeyboard"
                android:text="normal keyboard" />

            <Button
                android:id="@+id/optimizedKeyboardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toOptimizedKeyboard"
                android:text="optimized keyboard" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Fitts Experiment"
                android:onClick = "toFittsExperiment"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "500"
                android:id = "@+id/FittsD"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "50"
                android:id = "@+id/FittsW"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id = "@+id/dropDownList"
                android:spinnerMode="dropdown">
            </Spinner>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

